#!/bin/bash

cmd=$(basename $0)
syntax="$cmd : [-f from-host] [-h] {-t to-host} {-s service} [-m maxtries] [-n] [-w window] [-v] {-l {0|1|2}} [message]
$cmd : [-f from-host] -H {-t to-host} [-h] {-l {0|1|2}} -n -v [message]"

Window=30
MaxTries=10

opt_f=$(hostname)
opt_l=0

function sys {
	[ -n "${opt_n}${opt_v}" ] && echo "$@" 1>&2
	[ -n "$opt_n" ] || "$@"
}

function sendPassiveCheck {
	local	res

	if [ -n "$opt_H" ]
	then
		sys echo "[$(date +%s)] PROCESS_HOST_CHECK_RESULT;${opt_f};${opt_l};$@" | ssh -T "$opt_t"
		res="$?"
		logger -t "${cmd}" -- "$cmd $Args : ReturnCode = '$res'"
	else
		sys echo "[$(date +%s)] PROCESS_SERVICE_CHECK_RESULT;${opt_f};${opt_s};${opt_l};$@" | ssh -T "$opt_t"
		res="$?"
		logger -t "${cmd}" -- "$cmd $Args : ReturnCode = '$res'"
	fi

	return "$res"
}

Args="$*"

while getopts f:Hhl:m:ns:t:w:v arg
	do
	case "$arg" in
		f|H|h|l|m|n|s|t|w|v)
			eval "opt_${arg}='${OPTARG:=1}'"
			;;
	esac
done

shift $(($OPTIND - 1))

if [ -n "$opt_h" ]
then
	echo "$syntax" 1>&2
	exit 0
fi

if [ -z "$opt_H" -a -z "$opt_s" ]
then
	echo "$cmd : missing service" 1>&2
	echo "$syntax" 1>&2
	exit 1
fi

if [ -z "$opt_t" ]
then
	echo "$cmd : missing to-host" 1>&2
	echo "$syntax" 1>&2
	exit 1
fi

if [ -n "$opt_f" ]
then
	host="$opt_f"
fi

if [ -n "$opt_m" ]
then
	MaxTries="$opt_m"
fi

if [ -n "$opt_w" ]
then
	Window="$opt_w"
fi

Tries=0
res=$(sendPassiveCheck "$@" 2>&1)
ReturnCode="$?"
while [ "$ReturnCode" != 0 ]
do
	if [ "$Tries" -ge "$MaxTries" ]
	then
		logger -t "${cmd}" -- "Tried more than '$MaxTries' giving up. $cmd $Args"
		break
	else
		Tries=$((Tries + 1))
	fi

	p=$(($RANDOM % $Window))
	logger -t "${cmd}" -- "$cmd $Args : ReturnCode = '$ReturnCode' failed with '$res'.  Pausing for $p seconds on try '$Tries'"

	sleep "${p}s"

	res=$(sendPassiveCheck "$@" 2>&1)
	ReturnCode="$?"
done

# *** could set server to 'HostCheck' and combine service and host checks.
if [ -n "$opt_H" ]
then
	logger -t "${cmd}:HostCheck" -- "$cmd -H -f $opt_f -l $opt_l -t $opt_t"
else
	logger -t "${cmd}:${opt_s}" -- "$@"
fi


