#!/bin/bash

cmd=$(basename $0)
syntax="$cmd : [-f from-host] [-h] {-t to-host} {-s service} -n -v {-l {0|1|2}} [message]
$cmd : [-f from-host] -H {-t to-host} [-h] {-l {0|1|2}} -n -v [message]"

opt_f=$(hostname)
opt_l=0

function sys {
	[ -n "${opt_n}${opt_v}" ] && echo "$@" 1>&2
	[ -n "$opt_n" ] || "$@"
}

function sendPassiveCheck {
	if [ -n "$opt_H" ]
	then
		sys echo "[$(date +%s)] PROCESS_HOST_CHECK_RESULT;${opt_f};${opt_l};$@" | ssh -x -T "$opt_t"
	else
		sys echo "[$(date +%s)] PROCESS_SERVICE_CHECK_RESULT;${opt_f};${opt_s};${opt_l};$@" | ssh -x -T "$opt_t"
	fi
}


while getopts f:Hhl:ns:t:v arg
do
	case "$arg" in
		f|H|h|l|n|s|t|v)
			eval "opt_${arg}='${OPTARG:=1}'"
			;;
	esac
done

shift $(($OPTIND - 1))

if [ -n "$opt_h" ]
then
	echo "$syntax" 1>&2
	exit 0
fi

if [ -z "$opt_H" -a -z "$opt_s" ]
then
	echo "$cmd : missing service" 1>&2
	echo "$syntax" 1>&2
	exit 1
fi

if [ -z "$opt_t" ]
then
	echo "$cmd : missing to-host" 1>&2
	echo "$syntax" 1>&2
	exit 1
fi

if [ -n "$opt_f" ]
then
	host="$opt_f"
fi

sendPassiveCheck "$@"

# *** could set server to 'HostCheck' and combine service and host checks.
if [ -n "$opt_H" ]
then
	logger -t "${cmd}:HostCheck" -- "$cmd -H -f $opt_f -l $opt_l -t $opt_t"
else
	logger -t "${cmd}:${opt_s}" -- "$@"
fi
